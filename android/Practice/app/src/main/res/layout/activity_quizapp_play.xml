<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/quiz_app_bg"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:showDividers="middle">

        <ImageView
            android:id="@+id/exit_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_weight="2"
            android:text="Computer Quiz"
            android:textColor="@color/whiteTextColor"
            android:textSize="@dimen/newsMoreTextSize"
            android:textStyle="bold" />

        <View
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/moun" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/loginBkColor"
                android:drawableTop="@drawable/fb_ic"
                android:text="Question\n\n5"
                android:paddingTop="20dp"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/loginBkColor"
                android:drawableTop="@drawable/gg_ic"
                android:textAllCaps="false"
                android:paddingTop="20dp"
                android:text="Best Score\n\n100"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/loginBkColor"
                android:drawableTop="@drawable/fb_ic"
                android:textAllCaps="false"
                android:paddingTop="20dp"
                android:text="Time\n\n1:15m"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:drawableEnd="@drawable/playy"
            android:background="@drawable/button4_2"
            android:textAllCaps="false"
            android:text="Play Now"
            android:textSize="18dp"
            android:textColor="@color/whiteCardColor"
            android:gravity="center"
            android:paddingStart="120dp"
            android:paddingEnd="120dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="2"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button4_2"
                android:drawableStart="@drawable/add"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@color/whiteCardColor"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/button4_2"
                android:textAllCaps="false"
                android:drawableStart="@drawable/verify"
                android:text="Info"
                android:textColor="@color/whiteCardColor"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>